
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Layout/_Register.cshtml";
}

<div id="auth">

    <div class="container">
        <div class="row">
            <div class="col-md-7 col-sm-12 mx-auto">
                <div class="card pt-4">
                    <div class="card-body">
                        <div class="text-center mb-5">
                            <img src="~/PortalClient/app/images/mtdl-logo.png" height="48" class='mb-4'>
                            <h3>Sign Up</h3>
                            <p>Please fill the form to register.</p>
                        </div>
                        <form action="index.html">
                            <div class="row">


                                <!-- First Name -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="first-name-column">First Name</label>
                                        <input type="text" id="first-name-column" class="form-control" name="fn-column" placeholder="Enter your First Name here ...">
                                    </div>
                                </div>

                                <!-- Last Name -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="last-name-column">Last Name</label>
                                        <input type="text" id="last-name-column" class="form-control" name="ln-column" placeholder="Enter your Last Name here ...">
                                    </div>
                                </div>

                                <!-- Email -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="email-id-column">Email</label>
                                        <input type="email" id="email-id-column" class="form-control" name="email-id-column" placeholder="Enter your Email here ...">
                                    </div>
                                </div>

                                <!-- User Name -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="username-id-column">User Name</label>
                                        <input type="text" id="username-id-column" class="form-control" name="username-id-column" placeholder="Enter your User Name here ...">
                                    </div>
                                </div>

                                <!-- Phone -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="phone-column">Phone</label>
                                        <input type="text" id="phone-column" class="form-control" name="phone-column" placeholder="Enter your Phone Number here ...">
                                    </div>
                                </div>

                                <!-- BirthDate -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="birthdate-column">BirthDate</label>
                                        <input type="date" id="birthdate-column" class="form-control" name="birthdate-column">
                                    </div>
                                </div>

                                <!-- Gender -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="gender-floating">Gender</label>
                                        <select id="gender-floating" class="extra">
                                            <option value="L">L</option>
                                            <option value="P">P</option>
                                            <option value="none">Tidak disebutkan</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Agama -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="religion-floating">Religion</label>
                                        <select id="religion-floating" class="extra">
                                        </select>
                                    </div>
                                </div>

                            </div>

                            <a href="@Url.Action("Index","Account")">Have an account? Login</a>
                            <div class="clearfix">
                                <button class="btn btn-primary float-right">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section script{
    <script src="~/voler-master/dist/assets/js/feather-icons/feather.min.js"></script>
    <script src="~/voler-master/dist/assets/js/app.js"></script>

    <script src="~/voler-master/dist/assets/js/main.js"></script>
}


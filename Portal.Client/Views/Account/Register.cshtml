
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Layout/_Register.cshtml";
}

<div id="auth">

    <div class="container">
        <div class="row">
            <div class="col-md-7 col-sm-12 mx-auto">
                <div class="card pt-4">
                    <div class="card-body">
                        <div class="text-center mb-5">
                            <img src="~/PortalClient/app/images/mtdl-logo.png" height="48" class='mb-4'>
                            <h3>Sign Up</h3>
                            <p>Please fill the form to register.</p>
                        </div>
                        <div>
                            <div class="row">

                                <!-- First Name -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="fname-column">First Name</label>
                                        <input type="text" id="fname-column" class="form-control" name="fn-column" placeholder="Enter your First Name here ..."
                                               onchange="validfName();"
                                               onfocus="validfName();">
                                    </div>
                                </div>

                                <!-- Last Name -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="last-name-column">Last Name</label>
                                        <input onchange="validlName();"
                                               onfocus="validlName();"
                                               type="text" id="last-name-column" class="form-control" name="ln-column" placeholder="Enter your Last Name here ...">
                                    </div>
                                </div>

                                <!-- Email -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="email-column">Email</label>
                                        <input onchange="ValidateEmail();"
                                               onfocus="ValidateEmail();"
                                               type="email" id="email-column" class="form-control" name="email-id-column" placeholder="Enter your Email here ...">
                                    </div>
                                </div>

                                <!-- User Name -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="username-id-column">User Name</label>
                                        <input onchange="validUserName();"
                                               onfocus="validUserName();"
                                               type="text" id="username-column" class="form-control" name="username-id-column" placeholder="Enter your User Name here ...">
                                    </div>
                                </div>

                                <!-- Password -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="password-id-column">Password</label>
                                        <input type="password" 
                                               onchange="validPassword();"
                                               onfocus="validPassword();"
                                               id="password-column" class="form-control" name="password-id-column" placeholder="Enter your Password here ...">
                                    </div>
                                </div>

                                <!-- Confirm -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="confirm-column">Confirm Password</label>
                                        <input onchange="Confirm();"
                                               onfocus="Confirm();"
                                               type="password" id="confirm-column" class="form-control" name="confirm-id-column" placeholder="Enter your Password here ...">
                                    </div>
                                </div>

                                <!-- Phone -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="phone-column">Phone</label>
                                        <input onchange="validPhone();"
                                               onfocus="validPhone();"
                                               type="text" id="phone-column" class="form-control" name="phone-column" placeholder="Enter your Phone Number here ...">
                                    </div>
                                </div>

                                <!-- BirthDate -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="birthdate-column">BirthDate</label>
                                        <input onchange="validBirth();"
                                               onfocus="validBirth();"
                                               type="date" id="birthdate-column" class="form-control" name="birthdate-column">
                                    </div>
                                </div>

                                <!-- Gender -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="gender">Gender</label>
                                        <select id="gender" class="extra">
                                            <option value="Pria">L</option>
                                            <option value="Wanita">P</option>
                                            <option value="none">Tidak disebutkan</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Agama -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="religion-floating">Religion</label>
                                        <select id="religion-floating" class="extra">
                                        </select>
                                    </div>
                                </div>

                            </div>

                            <a href="@Url.Action("Index","Account")">Have an account? Login</a>
                            <div class="clearfix">
                                <button class="btn btn-primary float-right" onclick="SignUp();">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section script{
    <!-- Sweet Alert -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

    <script src="~/voler-master/dist/assets/js/feather-icons/feather.min.js"></script>
    <script src="~/voler-master/dist/assets/js/app.js"></script>

    <script src="~/voler-master/dist/assets/js/main.js"></script>

    <!-- Registration -->
    <script src="~/js/AccountRegistration.js"></script>

    <!-- SetValidity -->
    <script src="~/js/SetValidity.js"></script>
}


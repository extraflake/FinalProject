
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Layout/_Register.cshtml";
}

<div id="auth">
    <div class="container">
        <div class="row">
            <div class="col-md-7 col-sm-12 mx-auto">
                <div class="card pt-4">
                    <div class="card-body">
                        <div class="text-center mb-5">
                            <img src="~/PortalClient/app/images/mtdl-logo.png" height="48" class='mb-4'>
                            <h3>Sign Up</h3>
                            <p>Please fill the form to register.</p>
                        </div>
                        <div>
                            <div class="row">


                                <!-- First Name -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="fname-column">First Name</label>
                                        <input onchange="validfName();"
                                               type="text" id="fname-column" class="form-control" name="fn-column" placeholder="Enter your First Name here ...">
                                    </div>
                                </div>

                                <!-- Last Name -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="last-name-column">Last Name</label>
                                        <input onchange="validlName();"
                                               type="text" id="last-name-column" class="form-control" name="ln-column" placeholder="Enter your Last Name here ...">
                                    </div>
                                </div>

                                <!-- Email -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="email-column">Email</label>
                                        <input onchange="ValidateEmail();"
                                               type="email" id="email-column" class="form-control" name="email-id-column" placeholder="Enter your Email here ...">
                                    </div>
                                </div>

                                <!-- User Name -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="username-column">User Name</label>
                                        <input onchange="validUserName();"
                                               type="text" id="username-column" class="form-control" name="username-id-column" placeholder="Enter your User Name here ...">
                                    </div>
                                </div>

                                <!-- Password -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="password-column">Password</label>
                                        <input onchange="validPassword();"
                                               type="password" id="password-column" class="form-control" name="password-id-column" placeholder="Enter your Password here ...">
                                    </div>
                                </div>

                                <!-- Confirm -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="confirm-column">Confirm Password</label>
                                        <input onchange="Confirm();"
                                               type="password" id="confirm-column" class="form-control" name="confirm-id-column" placeholder="Enter your Password here ...">
                                    </div>
                                </div>

                                <!-- Phone -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="phone-column">Phone</label>
                                        <input onchange="validPhone();"
                                               type="number" id="phone-column" class="form-control" name="phone-column" placeholder="Enter your Phone Number here ...">
                                    </div>
                                </div>

                                <!-- BirthDate -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="birthdate-column">BirthDate</label>
                                        <input onchange="validBirth();"
                                               type="date" id="birthdate-column" class="form-control" name="birthdate-column">
                                    </div>
                                </div>

                                <!-- Gender -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="gender-floating">Gender</label>
                                        <select id="gender-floating" class="extra">
                                            <option value="Pria">L</option>
                                            <option value="Wanita">P</option>
                                            <option value="none">Tidak disebutkan</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Agama -->
                                <div class="col-md-6 col-12">
                                    <div class="form-group">
                                        <label for="religion">Religion</label>
                                        <select id="religion" class="extra">
                                        </select>
                                    </div>
                                </div>

                            </div>

                            <a href="@Url.Action("Index","Account")">Have an account? Login</a>
                            <div class="clearfix">
                                <button class="btn btn-primary float-right"
                                        data-toggle="modal" data-target="#updateDataModal"
                                    Submit
                                </button>
                            </div>

                            <div class="modal fade" id="updateDataModal" tabindex="-1" role="dialog"
                                 aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-scrollable" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalScrollableTitle">Update Data Pendidikan</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <i data-feather="x"></i>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <!-- First Name -->
                                            <div class="grid grid-ai-c">
                                                <label for="firstname" class="grid-item-left">Nama Depan : </label>
                                                <input onkeyup="validFirstName();"
                                                       class="form-control" type="text" placeholder="Masukkan nama depan anda..." id="firstname">
                                            </div>

                                            <!-- Last Name -->
                                            <div class="grid grid-ai-c">
                                                <label for="lastname" class="grid-item-left">Nama Belakang : </label>
                                                <input onkeyup="validLastName();"
                                                       class="form-control" type="text" placeholder="Masukkan nama belakang anda..." id="lastname">
                                            </div>

                                            <!-- Alamat Email -->
                                            <div class="grid grid-ai-c">
                                                <label for="email" class="grid-item-left">Email : </label>
                                                <input onkeyup="ValidateEmail();" class="form-control" type="text" placeholder="Masukkan email anda..." id="email">
                                            </div>

                                            <!-- Handphone -->
                                            <div class="grid grid-ai-c">
                                                <label for="hp" class="grid-item-left">Nomor HP : </label>
                                                <input onkeyup="validPhone();" class="form-control" type="number" placeholder="Masukkan nomor handphone anda..." id="hp">
                                            </div>

                                            <!-- Tanggal lahir -->
                                            <div class="grid grid-ai-c">
                                                <label for="birthdate" class="grid-item-left">Tanggal lahir : </label>
                                                <input onkeyup="validBirth();" class="form-control" type="date" placeholder="Masukkan tanggal lahir anda..." id="birthdate">
                                            </div>

                                            <!-- Gender -->
                                            <div class="grid grid-ai-c form-group">
                                                <label for="gender" class="grid-item-left">Gender : </label>
                                                <select class="grid-item-right extra" id="gender">
                                                    <option value="Pria">L</option>
                                                    <option value="Wanita">P</option>
                                                    <option value="none">Tidak disebutkan</option>
                                                </select>
                                            </div>

                                            <!-- Agama -->
                                            <div class="grid grid-ai-c form-group">
                                                <label for="religion-item" class="grid-item-left">Agama : </label>
                                                <select class="grid-item-right extra" id="religion-item">
                                                </select>
                                            </div>

                                            <!-- Sekolah/ Universitas -->
                                            <div class="grid grid-ai-c form-group">
                                                <label for="university" class="grid-item-left">Sekolah/ Universitas : </label>
                                                <select class="grid-item-right extra" id="university">
                                                </select>
                                                @*<input onkeyup="validUniv();" class="form-control" type="text" placeholder="Masukkan nama sekolah terakhir anda..." id="university">*@
                                            </div>

                                            <!-- Jurusan -->
                                            <div class="grid grid-ai-c form-group">
                                                <label for="department" class="grid-item-left">Jurusan : </label>
                                                <select class="grid-item-right extra" id="department">
                                                </select>
                                                @*<input onkeyup="validDept();" class="form-control" type="text" placeholder="Masukkan nama jurusan anda..." id="department">*@
                                            </div>

                                            <!-- Jenjang -->
                                            <div class="grid grid-ai-c form-group">
                                                <label for="aclevel" class="grid-item-left">Jenjang Pendidikan : </label>
                                                <select class="grid-item-right extra" id="degree">
                                                    <option value="SMK/SMA">SMK/SMA</option>
                                                    <option value="D3">D3 (Diploma)</option>
                                                    <option value="D4/S1">D4/S1</option>
                                                    <option value="S2">S2</option>
                                                    <option value="S3">S3</option>
                                                </select>
                                            </div>

                                            <!-- Tahun lulus -->
                                            <div class="grid grid-ai-c form-group">
                                                <label for="gradyear" class="grid-item-left">Tahun Kelulusan : </label>
                                                <select class="grid-item-right extra" id="gradyear">
                                                </select>
                                            </div>

                                            <!-- IPK Terakhir -->
                                            <div class="grid grid-ai-c">
                                                <label for="gpa" class="grid-item-left">IPK Terakhir : </label>
                                                <input onkeyup="validIpk();" class="form-control" type="number" placeholder="Masukkan IPK anda... (Skala 4.00)" id="gpa">
                                            </div>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-light-secondary" data-dismiss="modal">
                                                <i class="bx bx-x d-block d-sm-none"></i>
                                                <span class="d-none d-sm-block">Close</span>
                                            </button>
                                            <button type="button" class="btn btn-primary ml-1"
                                                    onclick="SignIn();"
                                                    >
                                                <i class="bx bx-check d-block d-sm-none"></i>
                                                <span class="d-none d-sm-block">Accept</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="~/voler-master/dist/assets/js/feather-icons/feather.min.js"></script>
    <script src="~/voler-master/dist/assets/js/app.js"></script>

    <script src="~/voler-master/dist/assets/js/main.js"></script>

    <!-- Registration -->
    <script src="~/js/ReligionScript.js"></script>
    <script src="~/js/EducationScript.js"></script>
    <script src="~/js/SetValidity.js"></script>

    <!-- Registration script -->
    <script src="~/js/AccountRegister.js"></script>
    @*<script src="~/js/AccountScript.js"></script>*@
}


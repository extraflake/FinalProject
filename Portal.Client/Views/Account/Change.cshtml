
@{
    ViewData["Title"] = "Change";
    Layout = "~/Views/Layout/_Login.cshtml";
}

<div id="auth">

    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-12 mx-auto">
                <div class="card pt-4">
                    <div class="card-body">
                        <div class="text-center mb-5">
                            <img src="~/PortalClient/app/images/mtdl-logo.png" height="48" class='mb-4'>
                            <h3>Change Password</h3>
                            <p>Change Your Password Here</p>
                        </div>
                        <div>

                            @*<div class="form-group position-relative has-icon-left">
                                    <div class="clearfix">
                                        <label for="password">Old Password</label>
                                    </div>
                                    <div class="position-relative">
                                        <input type="text" class="form-control" id="old">
                                        <div class="form-control-icon">
                                            <i data-feather="lock"></i>
                                        </div>
                                    </div>
                                </div>*@

                            <div class="form-group position-relative has-icon-left">
                                <div class="clearfix">
                                    <label for="password">New Password</label>
                                </div>
                                <div class="position-relative">
                                    <input type="password" class="form-control" id="new">
                                    <div class="form-control-icon">
                                        <i data-feather="lock"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group position-relative has-icon-left">
                                <div class="clearfix">
                                    <label for="password">Confirm Password</label>
                                </div>
                                <div class="position-relative">
                                    <input type="password" class="form-control" id="confirm">
                                    <div class="form-control-icon">
                                        <i data-feather="lock"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="clearfix">
                                <div class="float-md-left">
                                    <a href="@Url.Action("Index", "Registration")">Back</a>
                                </div>
                                <div class="float-md-right">
                                    <button class="btn btn-primary float-right" onclick="Change();">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section script{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

    <script src="~/voler-master/dist/assets/js/feather-icons/feather.min.js"></script>
    <script src="~/voler-master/dist/assets/js/app.js"></script>

    <script src="~/voler-master/dist/assets/js/main.js"></script>

    <!-- Change -->
    @*<script src="~/js/AccountChange.js"></script>*@
    <script src="~/js/AccountScript.js"></script>
}


@{
    ViewData["Title"] = "Religion";
    Layout = "~/Views/Layout/LayoutDataMaster.cshtml";
}


<div class="main-content container-fluid">
    <div class="page-title">
        <h3 id="university">Religion</h3>
        <p class="text-subtitle text-muted">Create, Read, Update and Delete the Exam Segments here!</p>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                <span data-toggle="modal" data-target="#myModal">
                    <button onclick="Add();" class="btn pull-left hidden-sm-down btn-outline-primary" data-placement="right" data-toggle="tooltip"
                            title="Edit">
                        <i data-feather="plus"></i>
                        Add New
                    </button>
                </span>
            </div>
            <div class="card-body">
                <table class='table table-striped' id="tablereligion">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Religion ID</th>
                            <th>Religion Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close"
                                    data-dismiss="modal">
                                &times;
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="container">
                                @*<form>*@
                                <div class="form-group">
                                    <input type="text" class="form-control" id="Id" placeholder="Insert the Application ID here" hidden>
                                </div>
                                <div class="form-group">
                                    <label for="title">Religion</label>
                                    <input type="text" class="form-control" placeholder="Insert the Religion name here" id="religion" />
                                </div>

                                @*</form>*@
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" data-dismiss="modal" id="saveBtn"
                                    onclick="Save();">
                                Insert
                            </button>
                            <button type="button" class="btn btn-warning" data-dismiss="modal" id="updateBtn"
                                    onclick="UpdateReligion();">
                                Update
                            </button>
                            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



    <script src="~/voler-master/dist/assets/js/main.js"></script>
    <!-- Exam Online Script -->
    <script src="~/js/ExamOnlineScript.js"></script>
    <script src="~/js/sweetAlert.js"></script>
    <script src="~/js/WaitingScript.js"></script>
}




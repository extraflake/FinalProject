    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="~/voler-master/dist/assets/js/feather-icons/feather.js"></script>
    <script src="~/voler-master/dist/assets/js/feather-icons.js"></script>
    <script src="~/voler-master/dist/assets/js/app.js"></script>
    <script src="~/voler-master/dist/assets/js/main.js"></script>
    <!-- Exam Online Script -->
    <script src="~/js/ExamOnlineScript.js"></script>
    <script src="~/js/sweetAlert.js"></script>
    <script src="~/js/WaitingScript.js"></script>
}





